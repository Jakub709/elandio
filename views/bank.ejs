<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--========== BOX ICONS ==========-->
    <link rel="icon" href="/images/favicon.png" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />

    <!--========== CSS ==========-->
    <link
      rel="stylesheet"
      href="/css/general/generalInner.css
  "
    />
    <link
      rel="stylesheet"
      href="/css/bank/bank.css
    "
    />

    <!--========== JQUERY a SWEET ==========-->
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <title>Banka</title>
  </head>
  <body>
    <!--========== HEADER ==========-->
    <header class="header">
      <div class="header__container">
        <img src="images/elandio_logo.png" alt="" class="header__img" />

        <p class="header__logo">Banka</p>
        <p class="header__logo__second">
          <i>„Já učím tebe, jiný učí mě.“ </i>
        </p>

        <div class="header__toggle">
          <i class="bx bx-menu" id="header-toggle"></i>
        </div>
      </div>
    </header>

    <!--========== NAV ==========-->
    <div class="nav" id="navbar">
      <nav class="nav__container">
        <div>
          <a href="/posts-list" class="nav__link nav__logo">
            <i class="bx bx-world nav__icon"></i>
            <img
              src="/images/elandio_logo_sidebar.png"
              alt=""
              class="header__img"
            />
          </a>

          <div class="nav__list">
            <div class="nav__items">
              <h3 class="nav__subtitle">Příspěvky</h3>

              <a href="/posts-list" class="nav__link">
                <i class="bx bx-task nav__icon"></i>
                <span class="nav__name">Seznam příspěvků</span>
              </a>

              <a href="/my-posts" class="nav__link">
                <i class="bx bx-pencil nav__icon"></i>
                <span class="nav__name">Moje příspěvky</span>
              </a>
            </div>

            <div class="nav__items">
              <h3 class="nav__subtitle">Uživatelé</h3>

              <a href="/users-list" class="nav__link">
                <i class="bx bx-user nav__icon"></i>
                <span class="nav__name">Seznam uživatelů</span>
              </a>
              <div class="nav__dropdown">
                <div class="nav__link">
                  <i class="bx bx-cog nav__icon"></i>
                  <span class="nav__name">Můj profil</span>
                  <i
                    class="bx bx-chevron-down nav__icon nav__dropdown-icon"
                  ></i>
                </div>

                <div class="nav__dropdown-collapse">
                  <div class="nav__dropdown-content">
                    <a href="/my-profile" class="nav__dropdown-item"
                      >Editovat profil</a
                    >
                    <a href="/my-profile-watch" class="nav__dropdown-item"
                      >Zobrazit profil</a
                    >
                    <a href="/bank" class="nav__dropdown-item">Educoiny</a>
                  </div>
                </div>
              </div>
            </div>

            <div class="nav__items">
              <a href="/notifications" class="nav__link">
                <i class="bx bx-bell nav__icon"></i>
                <span class="nav__name">Oznámení</span>
              </a>
              <a href="/messages" class="nav__link">
                <i class="bx bx-message-rounded nav__icon"></i>
                <span class="nav__name">Zprávy</span>
                <span id="messagesBadge"></span>
              </a>
            </div>
          </div>
        </div>

        <a href="/logout" class="nav__link nav__logout">
          <i class="bx bx-log-out nav__icon"></i>
          <span class="nav__name">Odhlásit se</span>
        </a>
      </nav>
    </div>

    <!--========== CONTENTS ==========-->
    <main>
      <div class="my-bank-page">
        <div class="container">
          <div class="my-bank grid grid--2-cols-same">
            <div class="hero-text-box">
              <h1 class="balance__value heading-primary">500 EC</h1>
              <p class="label-text error_message"></p>
              <form>
                <div class="form-item">
                  <input
                    id="nameTransfer"
                    type="text"
                    name="nameTransfer"
                    placeholder=""
                  />
                  <label for="nameTransfer">Název platby</label>
                </div>
                <div class="form-item">
                  <input
                    id="usernameTransfer"
                    type="text"
                    name="usernameTransfer"
                    placeholder=""
                  />
                  <label for="usernameTransfer"
                    >Uživatelské jméno příjemce platby</label
                  >
                </div>
                <div class="form-item">
                  <input
                    id="moneyTransfer"
                    type="number"
                    name="moneyTransfer"
                    placeholder=""
                  />
                  <label for="moneyTransfer">Částka</label>
                </div>
                <input class="button-1" type="submit" value="Odeslat platbu" />
              </form>
            </div>
            <div class="hero-img-box">
              <picture>
                <source srcset="images/bank.jpg" type="image/png" />
                <img class="hero-img" src="images/developer.png" />
              </picture>
            </div>
          </div>
        </div>
        <div class="container">
          <section class="section-movements">
            <h2 class="heading-secondary">Pohyby na účtu</h2>
            <p class="label-text date"></p>
            <div class="container-movements">
              <ul class="responsive-table">
                <li class="table-header">
                  <div class="col col-1">ID</div>
                  <div class="col col-2">Název</div>
                  <div class="col col-3">Částka</div>
                  <div class="col col-4">Uživatelské jméno</div>
                  <div class="col col-5">Datum</div>
                </li>
                <div class="movements"></div>
              </ul>
            </div>
            <!-- SUMMARY-->
            <div class="summary">
              <p class="summary__label">Příjmy</p>
              <p class="summary__value summary__value--in">0000&euro;</p>
              <p class="summary__label">Platby</p>
              <p class="summary__value summary__value--out">0000&euro;</p>
            </div>
          </section>
        </div>
      </div>
    </main>

    <!--========== MAIN JS ==========-->
    <script src="/js/transfers.js"></script>
    <script src="/js/commonLoggedIn.js"></script>
  </body>
</html>
